<% if @errors %>
  <div id="errors-made" data-errors="<%= @errors.to_json %>"></div>
<% end %>
<%= form_with(model: @request, url: requests_path, method: :post, local: true) do  |f| %>
  <div class="form-group">
    <%= label_tag(:email, "Email") %>
    <%= f.email_field(:email, class: "form-control", required: true) %>
  </div>

  <div class="form-group">
    <%= label_tag(:phone_number, "Phone Number") %>
    <%= f.telephone_field(:phone_number, class: "form-control", required: true) %>
    <small class="form-text text-muted">Make sure your number starts with +33 or 0 (French number)</small>
  </div>

  <div class="form-group">
    <%= label_tag(:first_name, "Name") %>
    <%= f.text_field(:first_name, class: "form-control", required: true) %>
  </div>

  <div class="form-group">
    <%= label_tag(:last_name, "Last Name") %>
    <%= f.text_field(:last_name, class: "form-control", required: true) %>
  </div>

  <div class="form-group">
    <%= label_tag(:bio, "Short Bio") %>
    <%= f.text_field(:bio, class: "form-control", required: true) %>
  </div>
  <%= f.submit "Book!", class: "btn btn-primary" %>
<% end %>
